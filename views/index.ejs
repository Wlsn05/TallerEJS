<!doctype html>
<html lang='es'>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=7">
  <title>MiLibro</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="javascript:void(0)">MiLibro</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mynavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/insert">Insert</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="javascript:void(0)">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!--Bloque de tarjetas -->
  <div class="container p-4">
    <div class="row">
      <%if (books.length> 0) {%>
        <% books.forEach(function(book) { %>
          <div class="col-md-4">
            <div class="card" style="max-width: 18rem;">
              <div class="card-header bg-primary text-white">
                <p>
                  <%= book.titulo %>
                </p><br>
                <p>
                  <%= book.autor %>
                </p>
              </div>
              <img src="<%= book.image %>" alt="" class="rounded">
              <div class="card card-body">
              </div>
              <div class="card-footer"></div>
              <p>
                <%= book.isbn %>
              </p>
              <p>
                <%= book.genero %>
              </p>
              <p>
                <%= book.anio %>
              </p>
              <a href="/delete <%= book.titulo %>" class="btn btn-danger btn-block">Eliminar</a>
            </div>
          </div>
          <%})%>

            <%} else {%>
              <div class="card card-body text-center">
                <p>No hay libros agregados <a href="/insert">Agregue uno nuevo</a></p>
              </div>
              <%}%>
    </div>
  </div>

</body>

</html>